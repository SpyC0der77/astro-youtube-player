---
interface Props {
    thumbnail: string;
    title: string;
    channel: string;
    views: string;
    uploadDate: string;
}

const { thumbnail, title, channel, views, uploadDate } = Astro.props;
---

<div class="suggested-video">
    <div class="thumbnail">
        <img src={thumbnail} alt={title} />
    </div>
    <div class="info">
        <h3>{title}</h3>
        <p class="channel">{channel}</p>
        <p class="stats">{views} â€¢ {uploadDate}</p>
    </div>
</div>

<style>
    .suggested-video {
        display: flex;
        gap: 10px;
        margin-bottom: 10px;
        cursor: pointer;
    }

    .thumbnail {
        width: 168px;
        height: 94px;
        flex-shrink: 0;
    }

    .thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
    }

    .info {
        flex-grow: 1;
    }

    h3 {
        font-size: 14px;
        margin-bottom: 4px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .channel, .stats {
        font-size: 12px;
        color: var(--secondary-color);
    }
</style>