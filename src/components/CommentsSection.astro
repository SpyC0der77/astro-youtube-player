    <CommentForm />
    
    <div class="comments-list">
        {comments.map(comment => (
            <Comment {...comment} />
        ))}
    </div>
</div>

<style>
    .comments-section {
        margin-top: 24px;
        border-top: 1px solid #272727;
    }

    .comments-header {
        padding: 24px 0;
        display: flex;
        align-items: center;
