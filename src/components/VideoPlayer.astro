---
interface Props {
    videoId: string;
    title: string;
    views: string;
    uploadDate: string;
    channelName: string;
    description: string;
}

const { videoId, title, views, uploadDate, channelName, description } = Astro.props;
---

<div class="video-container">
    <div class="player">
        <iframe
            src={`https://www.youtube.com/embed/${videoId}`}
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
        ></iframe>
    </div>
    <div class="video-info">
        <h1>{title}</h1>
        <div class="meta">
            <span class="channel">{channelName}</span>
            <span class="stats">{views} views â€¢ {uploadDate}</span>
        </div>
        <div class="description">
            <p>{description}</p>
        </div>
    </div>
</div>

<style>
    .video-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }

    .player {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
        height: 0;
        overflow: hidden;
    }

    .player iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 12px;
    }

    .video-info {
        margin-top: 20px;
    }

    h1 {
        font-size: 20px;
        margin-bottom: 10px;
    }

    .meta {
        display: flex;
        gap: 20px;
        color: var(--secondary-color);
        margin-bottom: 20px;
    }

    .channel {
        font-weight: bold;
    }

    .description {
        background: #272727;
        padding: 12px;
        border-radius: 12px;
        margin-top: 16px;
    }
</style>