<div class="comment-form">
    <div class="avatar">
        <img src="https://i.pravatar.cc/40?img=1" alt="Your avatar" />
    </div>
    <form>
        <input type="text" placeholder="Add a comment..." />
        <div class="buttons">
            <button type="button" class="cancel">Cancel</button>
            <button type="submit" class="comment">Comment</button>
        </div>
    </form>
</div>

<style>
    .comment-form {
        display: flex;
        gap: 16px;
        padding: 24px 0;
    }

    .avatar img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
    }

    form {
        flex-grow: 1;
    }

    input {
        width: 100%;
        background: transparent;
        border: none;
        border-bottom: 1px solid #272727;
        padding: 8px 0;
        color: var(--text-color);
        font-size: 14px;
        margin-bottom: 8px;
    }

    input:focus {
        outline: none;
        border-bottom-color: var(--text-color);
    }

    .buttons {
        display: flex;
        justify-content: flex-end;
        gap: 8px;
        padding-top: 8px;
    }

    button {
        padding: 8px 16px;
        border-radius: 18px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
    }

    .cancel {
        background: transparent;
        border: none;
        color: var(--secondary-color);
    }

    .cancel:hover {
        background: #272727;
    }

    .comment {
        background: #3ea6ff;
        border: none;
        color: #000;
    }

    .comment:hover {
        background: #65b8ff;
    }
</style>